<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
android:orientation="vertical"
android:gravity="center_horizontal"
tools:context=".MainActivity">

<TextView
    android:gravity="center"
    android:text="@string/app_greeting"
    android:textSize="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="30dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

<Button
    android:id="@+id/spotify_streamer_app_btn"
    android:text="@string/app_name_spotify"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:onClick="spotify"
    />

<Space
    android:layout_width="200dp"
    android:layout_height="10dp"/>

<Button
    android:id="@+id/scores_app_btn"
    android:text="@string/app_name_scores"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:onClick="scores"
    />

<Space
    android:layout_width="200dp"
    android:layout_height="10dp"/>

<Button
    android:id="@+id/library_app_btn"
    android:text="@string/app_name_library"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:onClick="library"
    />

<Space
    android:layout_width="200dp"
    android:layout_height="10dp"/>

<Button
    android:id="@+id/build_it_bigger_app_btn"
    android:text="@string/app_name_build_it_bigger"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:onClick="bigger"
    />

<Space
    android:layout_width="200dp"
    android:layout_height="10dp"/>

<Button
    android:id="@+id/xyz_reader_app_btn"
    android:text="@string/app_name_xyz_reader"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:onClick="xyz"
    />

<Space
    android:layout_width="200dp"
    android:layout_height="10dp"/>

<Button
    android:id="@+id/capstone_app_btn"
    android:text="@string/app_name_captone"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:onClick="capstone"
    />

</LinearLayout>
